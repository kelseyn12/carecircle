rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Updates photos: only authenticated users can upload/read their own photos
    match /updates/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Profile photos: users can upload/read their own profile photos
    match /profiles/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
